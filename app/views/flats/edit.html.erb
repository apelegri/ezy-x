<div class="container">
  <div class="row col-xs-10 col-xs-offset-1 col-sm-10 col-sm-offset-1 col-md-10 col-md-offset-1 contact-background-box text-center">
    <div class="row">
      <div class="col-xs-10 col-xs-offset-1 col-sm-8 col-sm-offset-2">
      <h1>Photo Uploader</h1>
      <div class="card-form">
        <br>
        <br>
        <%= form_for(@flat, :html => { multipart: true }) do |f| %>
          <%= f.fields_for :image do |ff| %>
              <div class="field">
                <%= ff.label :image %><br>
                <%= ff.file_field :image, multiple: true, name: "images[]" %>
              </div>
            <% end %>
          <%= f.submit %>
          <br>
        <% end %>
      </div>
      </div>
    </div>
  </div>
</div>
