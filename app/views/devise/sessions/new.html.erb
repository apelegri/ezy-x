<div class="container">
  <div class="row col-xs-10 col-xs-offset-1 col-sm-10 col-sm-offset-1 col-md-10 col-md-offset-1 contact-background-box text-center">
    <div class="row">
      <div class="col-xs-10 col-xs-offset-1 col-sm-8 col-sm-offset-2">
        <div align="center">
          <h2 style="font-weight: bold; margin-bottom: 40px">Log in</h2>

          <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
            <div class="form-inputs">
              <%= f.input :email, required: false, autofocus: true %>
              <%= f.input :password, required: false %>
              <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
            </div>

            <div class="form-actions">
              <%= f.button :submit, "Log in", class:"pages-cta-light-form" %>
            </div>
          <% end %>
            <br>
            <br>
          <%= render "devise/shared/links"%>
      </div>
    </div>
  </div>
</div>

