<div class="container">
  <div class="row col-xs-10 col-xs-offset-1 col-sm-8 col-sm-offset-2 background-box">
    <div class="row ">
      <div class="col-xs-10 col-xs-offset-1 col-sm-6 col-sm-offset-3">
        <div align="center">
          <h3 style="font-weight: bold">Votre message</h3><br>
          <p>Nous vous contacterons au plus vite.</p><br>
          <%= simple_form_for @contact, :html => {:class => 'form-horizontal' } do |f| %>
            <%= f.input :name,placeholder: "José Beauvais...", label: false, :required => true %>
            <%= f.input :email,placeholder: "josébeauvais@gmail.com...", label: false, :required => true %>
            <p style="font-weight: bold; text-align: left">Message:</p>
            <%= f.input :message, :as => :text, placeholder: "Recherche un appartement dans le 3ième avec vue sur parc...", label: false, :required => true %>
            <div class= "hidden">
              <%= f.input :nickname, :hint => 'Leave this field blank!' %>
            </div>
              </br>
              <%= f.button :submit, 'ENVOYER', :class=> "pages-cta-light-form" %>
            </div><br>
          <% end %>
      </div>
    </div>
  </div>
</div>

